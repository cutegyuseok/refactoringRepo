<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cafe.shop.mapper.MemberMapper">

    <insert id="signup" parameterType="com.cafe.shop.member.dto.Member">
        INSERT INTO customer

        (ID
        ,PW
        ,NAME
        ,POSTCODE
        ,PHONE
        ,ADDRESS
        ,ADDRESSDETAIL
        ,EMAIL
        ,GENDER
        ,SNS
        ,BIRTH)

        VALUES

        (#{id}
        ,#{pw}
        ,#{name}
        ,#{postcode}
        ,#{phone}
        ,#{address}
        ,#{addressDetail}
        ,#{email}
        ,#{gender}
        ,#{sns}
        ,#{birth})
    </insert>

    <select id="login" parameterType="com.cafe.shop.member.dto.Member" resultType="com.cafe.shop.member.dto.Member">
        SELECT ID,PW,NAME,POSTCODE,PHONE,ADDRESS,ADDRESSDETAIL,EMAIL,GENDER,SNS,BIRTH FROM CUSTOMER
        WHERE
            ID=#{id}
          AND
            PW=#{pw}
          AND
            ISMEM='Y'
    </select>
</mapper>